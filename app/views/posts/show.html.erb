<div class="d-flex flex-column align-items-center gap-4 my-5">
    <div class="container d-flex w-75 p-0">
        <a href="<%= user_path(@user) %>"><img class="rounded-circle bg-white p-2 border me-4" src="<%= @user.photo %>" alt="User Photo"></a>
        <div class="border rounded-5 w-100 bg-white p-4 d-flex flex-column justify-content-between">
            <div class="m-0">
                <h2 class="fs-2">
                    <%= @post.title %>
                    <%= link_to @user.name, user_path(@user), class: "text-decoration-none text-decoration-underline-hover"  %>
                    </h2>
                <span class="text-secondary">Post no. <%= @post.id %></span>
                <p class="fs-3 my-3"><%= @post.text %></p>
            </div>
            <%= link_to "Back to Home", root_path, title:"To Home Page", class: "text-decoration-none fs-4 text-decoration-underline-hover text-primary align-self-end" %>
        </div>
    </div>

    <h3 class="text-center m-0">Comments</h3>
    <div class="d-flex flex-column gap-3 w-75 bg-white p-4 border rounded-5">
        <% @post.comments.each do |comment| %>
            <div class="d-flex flex-column">
                <h4 class="mb-0">
                    <img class="rounded-circle bg-white p-1 border m-0 comment-profile-picture" src="<%= comment.user.photo %>" alt="User Photo">
                    <%= link_to comment.user.name, user_path(comment.user), class: "text-decoration-none text-decoration-underline-hover" %></h4>
                <p class="fs-4 ms-5"><%= comment.text %></p>
            </div>
        <% end %>
    </div>

    <%= link_to "Back to all posts", user_path(@user)+"/posts", class: "btn btn-primary fs-3 px-3 py-2 rounded-pill" %>
</div>
