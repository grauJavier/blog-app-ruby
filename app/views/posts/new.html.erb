<%= form_with(model: [@user, @post], url: user_posts_path(@user), method: :post, class: "form") do |form| %>
<div class="d-flex flex-column mt-3">
  <h3 class="text-center m-3">Add New Post for <%= @user.name %></h3>
  <div class="d-flex flex-column gap-3 w-50 align-self-center">
    <div class="d-flex gap-3 w-100 align-items-center">
      <%= form.label :title, class: "fs-2" %>
      <%= form.text_field :title, class: "form-control border rounded-5 px-4 py-3 fs-3 w-100", required: true %>
    </div>
    <div class="d-flex gap-3 w-100 align-items-start">
      <%= form.label :text, class: "fs-2"%>
      <%= form.text_area :text, class: "form-control border rounded-5 px-4 py-3 fs-3 w-100", required: true %>
    </div>
    <div class="d-flex gap-3 justify-content-end">
      <%= link_to "Back to all posts", user_posts_path(@user), class: "text-decoration-none fs-4 text-decoration-underline-hover text-primary align-self-end my-auto" %>
      <%= form.submit 'Add New Post', class: "btn btn-primary fs-3 px-4 py-2 rounded-pill" %>
  </div>
<% end %>
